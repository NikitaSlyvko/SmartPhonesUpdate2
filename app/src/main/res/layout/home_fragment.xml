<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/aler_button_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_button_music"/>

    <Button android:id="@+id/alert_button_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_button_custom"/>

    <Button android:id="@+id/alert_button_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_button_dialogue"/>

    <Button android:id="@+id/alert_button_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_button_exit"/>
</LinearLayout>